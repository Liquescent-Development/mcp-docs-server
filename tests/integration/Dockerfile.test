FROM node:20.19.4-alpine3.22

# Install testing dependencies
RUN apk update && apk upgrade && \
    apk add --no-cache curl jq && \
    rm -rf /var/cache/apk/*

# Create test user
RUN addgroup -g 1001 -S testuser && \
    adduser -S testuser -u 1001

WORKDIR /app

# Copy package files for test dependencies
COPY tests/integration/package*.json ./

# Install test dependencies
RUN npm ci --only=production

# Copy test files
COPY tests/integration/ ./tests/

# Create test results directory
RUN mkdir -p test-results && chown -R testuser:testuser /app

USER testuser

# Default command
CMD ["npm", "run", "test:integration"]