# MCP Documentation Server Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Transport Configuration
# Transport mode: stdio, http, or both (default: both)
TRANSPORT_MODE=both

# HTTP Server Settings (for HTTP/SSE transport)
HOST=0.0.0.0
HTTP_TRANSPORT_ENABLED=true
MAX_REQUEST_SIZE=1mb

# Session Management (HTTP transport)
SESSION_TIMEOUT=300000
SESSION_CLEANUP_INTERVAL=60000

# CORS Configuration (HTTP transport)
CORS_ORIGIN=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# HTTP Keep-Alive Settings
HTTP_KEEP_ALIVE_TIMEOUT=5000
HTTP_HEADERS_TIMEOUT=8000

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Cache Configuration
CACHE_DIR=./cache
CACHE_TTL=3600
CACHE_STORAGE=both

# Documentation Sources (Use corrected variable names)
DOCS_ELECTRON_URL=https://www.electronjs.org
DOCS_REACT_URL=https://react.dev
DOCS_NODE_URL=https://nodejs.org
DOCS_GITHUB_URL=https://docs.github.com

# Rate Limiting (Global)
RATE_LIMIT_PER_MINUTE=60

# HTTP-Specific Rate Limiting
HTTP_RATE_LIMIT_ENABLED=true
HTTP_RATE_LIMIT_REQUESTS_PER_MINUTE=120
HTTP_RATE_LIMIT_BURST=10

# GitHub API Token (for GitHub documentation access)
GITHUB_TOKEN=your_github_token_here

# Optional: Advanced Configuration
# DATABASE_URL=postgresql://user:password@localhost:5432/mcp_docs
# REDIS_URL=redis://localhost:6379