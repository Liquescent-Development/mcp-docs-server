# MCP Documentation Server Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Cache Configuration
CACHE_TYPE=file
CACHE_DIRECTORY=./cache
CACHE_MAX_SIZE=100MB
CACHE_TTL=3600

# Documentation Sources
ELECTRON_DOCS_URL=https://electronjs.org/docs
REACT_DOCS_URL=https://react.dev/reference
NODE_DOCS_URL=https://nodejs.org/api

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# GitHub API (for GitHub-hosted docs)
GITHUB_API_TOKEN=your_github_token_here

# Optional: Database URL for persistent cache
# DATABASE_URL=postgresql://user:password@localhost:5432/mcp_docs

# Optional: Redis URL for distributed cache
# REDIS_URL=redis://localhost:6379