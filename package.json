{
  "name": "mcp-docs-server",
  "version": "1.0.0",
  "description": "MCP server providing Claude Code with access to technical documentation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "./scripts/run-integration-tests.sh",
    "test:integration:ci": "CI=true ./scripts/run-integration-tests.sh",
    "test:performance": "make test-performance",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build",
    "security:scan": "make security-scan",
    "security:audit": "npm audit --audit-level moderate"
  },
  "keywords": [
    "mcp",
    "claude",
    "documentation",
    "electron",
    "development",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "config": "^3.3.9",
    "dotenv": "^17.2.1",
    "eventsource": "^4.0.0",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/config": "^3.3.3",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Liquescent-Development/mcp-docs-server.git"
  },
  "bugs": {
    "url": "https://github.com/Liquescent-Development/mcp-docs-server/issues"
  },
  "homepage": "https://github.com/Liquescent-Development/mcp-docs-server#readme"
}
